<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imagePublication"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tituloPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imagePublication"
            android:text="This is Demo Name"
            android:textColor="@color/colorPrimary2"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloPublicacion"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imagePublication"
            android:text="This is Course Name"
            android:textColor="#000"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/precioPublicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripcionPublicacion"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imagePublication"
            android:text="This is Email Name"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/publiNoDisponible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D5CCCC"
            android:layout_below="@id/precioPublicacion"
            android:layout_toRightOf="@id/imagePublication"
            android:visibility="gone"
            android:textSize="22sp"
            android:text="No disponible" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
